@model List<ProductsWithCategoryDto> 

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table table-striped">
   
    <thead>
        <tr>
            <td>ID</td>
            <td>NAME</td>
            <td>PRICE</td>
            <td>STOCK</td>
            <td>CATEGORY</td>
            <td>CREATEDDATE</td>
            <td>UPDATE</td>
            <td>DELETE</td>

        </tr>
     
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Category.Name</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a href="@Url.Action("Update","Products",new {id=item.Id})" class="btn btn-warning" role="button" aria-disabled="true">Update</a>
                    @*<a class="btn btn-danger" asp-action="Update" asp-controller="Products" asp-route-id=@item.Id>Update</a>*@

                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Products" asp-route-id=@item.Id>Delete</a>
                    @*<a href="@Url.Action("Delete","Products",new {id=item.Id})" class="btn btn-danger" role="button" aria-disabled="true">Delete</a>*@
                </td>
            </tr>


        }
    </tbody>

</table>
